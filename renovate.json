{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "branchTopic": "lock-file-maintenance-{{packageFile}}",
    "commitMessageExtra": "{{packageFile}}"
  },
  "minimumReleaseAge": "7 days",
  "packageRules": [
    {
      "matchPackageNames": [
        "httpx",
        "pytest-httpx"
      ],
      "groupName": "httpx"
    }
  ]
}
